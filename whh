--// ================= INTERNAL =================

local PlayerData = {}

local function newDrawings()
	return {
		Text = Drawing.new("Text"),
		Box = Drawing.new("Square"),
		Tracer = Drawing.new("Line"),
		HeadDot = Drawing.new("Circle"),
		Health = {
			Main = Drawing.new("Square"),
			Outline = Drawing.new("Square")
		}
	end
end

local function hideAll(d)
	for _,v in pairs(d.Drawings) do
		if typeof(v) == "table" then
			for _,x in pairs(v) do x.Visible = false end
		else
			v.Visible = false
		end
	end
end

--// ================= UPDATE =================

local function updatePlayer(d)
	local char = d.Character
	if not char then return hideAll(d) end

	local hum = char:FindFirstChildOfClass("Humanoid")
	local hrp = char:FindFirstChild("HumanoidRootPart")
	local head = char:FindFirstChild("Head")

	if not hum or not hrp or not head then return hideAll(d) end
	if WallHack.Settings.AliveCheck and hu
